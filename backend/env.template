# ============================================
# Auto-Dash Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp env.template .env
# ============================================

# ============================================
# Google OAuth Configuration
# ============================================
# Get these from Google Cloud Console > APIs & Services > Credentials
# For production: Update OAuth redirect URI to: https://your-cloud-run-url.run.app/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ============================================
# Frontend URL (Production)
# ============================================
# Set this to your Vercel frontend URL (e.g., https://your-app.vercel.app)
# This is used for CORS configuration
FRONTEND_URL=

# ============================================
# JWT & Session Security
# ============================================
# Generate a strong random secret for JWT tokens
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=
SESSION_SECRET=

# ============================================
# Database Configuration
# ============================================
# For local development: sqlite:///./autodash.db
# For Cloud Run (Cloud SQL PostgreSQL): postgresql://user:password@/dbname?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# For Cloud Run (standard PostgreSQL): postgresql://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./autodash.db

# ============================================
# Stripe Configuration
# ============================================
# Get these from Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# LLM Model Configuration
# ============================================
# Model format: "openai/gpt-4o-mini" or "anthropic/claude-3-7-sonnet-latest" or "gemini/gemini-pro"
DEFAULT_MODEL=openai/gpt-4o-mini

# ============================================
# API Keys (set based on DEFAULT_MODEL)
# ============================================
# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=

# Anthropic API Key (if using Claude models)
ANTHROPIC_API_KEY=

# Google/Gemini API Key (if using Gemini models)
GEMINI_API_KEY=

# ============================================
# Cloud Run Specific Settings
# ============================================
# Session HTTPS only (set to "1" for production)
SESSION_HTTPS_ONLY=1

# Auto migrate database on startup (set to "1" to enable)
AUTO_MIGRATE=1
